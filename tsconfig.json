{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "inlineSourceMap": true,
    "declaration": true,
    "outDir": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es6",
    "strict": true,
    "jsx": "preserve",
    "lib": [
      "es2018",
      "esnext"
    ]
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "node_modules",
    "*.js"
  ]
}
